{
  "name": "nex-pay-backend",
  "version": "1.0.0",
  "description": "N3X PAY - Hybrid Digital Payment Platform Backend",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "compile-contracts": "hardhat compile",
    "deploy-contracts": "hardhat run scripts/deploy.js --network sepolia",
    "migrate:latest": "npm run db:migrate",
    "migrate:down": "npm run db:migrate:down"
  },
  "keywords": [
    "fintech",
    "payment",
    "blockchain",
    "crypto",
    "wallet"
  ],
  "author": "N3X PAY Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "mongoose": "^8.0.3",
    "redis": "^4.6.12",
    "jsonwebtoken": "^9.1.2",
    "bcryptjs": "^2.4.3",
    "crypto-js": "^4.2.0",
    "ethers": "^6.9.1",
    "axios": "^1.6.5",
    "joi": "^17.11.0",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "uuid": "^9.0.1",
    "web3": "^4.3.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.11",
    "hardhat": "^2.19.4",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "hardhat-deploy": "^0.11.45"
  }
}
